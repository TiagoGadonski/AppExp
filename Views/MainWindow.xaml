<Window x:Class="AppExp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AppExp.Views"
        xmlns:vm="clr-namespace:AppExp.ViewModels"
        Title="Exploding Kittens" Height="450" Width="800">
    <Window.DataContext>
        <vm:GameViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding StatusMessage}" FontSize="16" FontWeight="Bold" Margin="10" Grid.Row="0" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding CurrentPlayer.Hand}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="14" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <ListBox ItemsSource="{Binding GameLog}" Grid.Row="2" Margin="10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
            <Button Content="Draw Card" Command="{Binding DrawCardCommand}" Margin="10"/>
            <Button Content="Restart Game" Command="{Binding RestartGameCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
