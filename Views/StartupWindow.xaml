<Window x:Class="AppExp.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração do Jogo" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Número de Jogadores:" />
            <TextBox x:Name="NumPlayersTextBox" />

            <TextBlock Text="Número de Bots:" Margin="0,10,0,0" />
            <TextBox x:Name="NumBotsTextBox" />

            <Button Content="Iniciar Jogo" Click="StartGameButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
