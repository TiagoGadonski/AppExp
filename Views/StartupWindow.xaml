<Window x:Class="AppExp.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Número de Jogadores:" Margin="5"/>
            <TextBox x:Name="NumPlayersTextBox" Margin="5"/>
            <TextBlock Text="Número de Bots:" Margin="5"/>
            <TextBox x:Name="NumBotsTextBox" Margin="5"/>
            <Button Content="Iniciar Jogo" Click="StartGameButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
