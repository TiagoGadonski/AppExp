<Window x:Class="AppExp.Views.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="150" Width="300">
    <Grid>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox Text="{Binding ResponseText}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
